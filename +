package main

import (
	"fmt"
	"stupiddb"
	"stupiddb/query"
	"stupiddb/types"
)

func main() {
	if err := stupiddb.CreateInstance("goomotic"); err != nil {
		fmt.Println(err)
		return
	}

	db, err := stupiddb.Instance("goomotic")
	if err != nil {
		fmt.Println(err)
		return
	}

	fields := map[string]stupiddb.Type{
		"id":       stupiddb.Int("primary"),
		"username": stupiddb.String(20),
		"password": stupiddb.String(40),
	}

	if err := db.CreateTable("ppp", fields); err != nil {
		fmt.Println(err)
		return
	}
	return
}
